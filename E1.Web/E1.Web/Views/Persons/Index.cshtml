@model E1.Web.Models.PersonSearchViewModel

@{
    ViewData["Title"] = "Search results";
}

<h1>@ViewBag.Title</h1>

<div>
    <p>
        <a asp-action="Add" asp-controller="Persons" asp-area="">Add person</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Creation date</th>
            <th>Group</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var person in Model.Persons)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.CreatedTimestamp</td>
                <td>@person.GroupName</td>
            </tr>
        }
        </tbody>
    </table>
</div>
